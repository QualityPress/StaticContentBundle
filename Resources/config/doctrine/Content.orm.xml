<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="QualityPress\Bundle\StaticContentBundle\Entity\Content" table="qp_contents">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        
        <field name="identity"      type="string" length="100" />
        <field name="description"   type="string" length="250" />
        <field name="context"       type="string" />
        <field name="body"      type="text" nullable="true" />
    </entity>
</doctrine-mapping>